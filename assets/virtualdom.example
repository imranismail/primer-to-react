// Message Component
const Message = (props) =>
  <div className='container'>
    <h1>{ props.title }</h1>
    <p>{ props.message }</p>
  </div>

// Message component being used in JSX
<Message title={'Hello World'} message={'Learn you some React for great good!!'} />

// VDOM representation of the Message component with props changing
const Message = {
  component: 'div',
  props: { className: 'container' }
  children: [
    { component: 'h1', props: { className: 'header' }, children: 'Hello World' },
    { component: 'p', props: { className: 'header' }, children: 'Learn you some React for great good!!' }
  ]
}
